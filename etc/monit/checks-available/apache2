check process apache2 with pidfile /var/run/apache2/apache2.pid
  start program = "/usr/sbin/service apache2 start" with timeout 60 seconds
  stop program  = "/usr/sbin/service apache2 stop"
  if cpu > 60% for 2 cycles then alert
  if cpu > 80% for 5 cycles then restart
  if totalmem > 384.0 MB for 5 cycles then restart
  if children > 100 then restart
  if loadavg(5min) greater than 4 for 8 cycles then stop
  if failed host ${virtual host name} port 80 protocol http then alert
  if failed host ${virtual host name} port 443 type tcpssl protocol http
  with timeout 5 seconds then alert
#  with timeout 5 seconds then restart
  if 3 restarts within 5 cycles then timeout
  group www-data

check file apache2_bin with path "/usr/sbin/apache2"
  group www-data
  include /etc/monit/templates/rootbin

check file apache2_rc with path "/etc/init.d/apache2"
  group www-data
  include /etc/monit/templates/rootbin
