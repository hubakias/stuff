# Meant for ReHat distro and derivatives - Debian* has slapd
/var/log/openldap/openldap.log {
  olddir=/var/log/openldap/old/
  weekly
  rotate 52
  compress
  delaycompress
  dateext
  missingok
  notifempty
  create 640 root adm
  sharedscripts
  postrotate
    /bin/kill -HUP $(cat /var/run/syslogd.pid 2> /dev/null) 2> /dev/null || true
  endscript
}
